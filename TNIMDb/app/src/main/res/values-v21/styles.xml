<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:src">@drawable/ic_unfav</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="StatusBarTransparent" parent="Theme.AppCompat">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>
